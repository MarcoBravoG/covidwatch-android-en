<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="org.covidwatch.android.ui.exposures.ExposuresViewModel" />

        <variable
            name="item"
            type="org.covidwatch.android.data.CovidExposureInformation" />
    </data>

    <com.skydoves.expandablelayout.ExpandableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/padding_normal"
        android:foregroundTint="@color/lightGray"
        android:paddingHorizontal="@dimen/padding_normal"
        android:paddingVertical="@dimen/padding_normal"
        app:expandable_spinner="@drawable/ic_drop_down_arrow"
        app:expandable_spinner_color="@color/primaryText"
        app:exposure="@{item}"
        tools:text="May 20, 2020" />
</layout>